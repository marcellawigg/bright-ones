<div class="search">
  <form>
    <label for="idea_search">Search</label>
    <input type="text" id="idea_search">
  </form>
</div>

<h2 id="created-ideas-header">Create a New Idea:</h2>
<div class="created-idea-form">
  <form>

    <fieldset class="form-group">
      Idea Title:
      <input id="idea-title" type="text" name:"Title:"><br>
    </fieldset>
    <fieldset class="form-group">
      Idea Body: <input id="idea-body" type="text" name:"Body:"><br>
    </fieldset>
    <button id="submit-button" type="button">Save</button>
  </form>
</div>


<div class="root-page">
  <div class="landing-text">
  <h1 id="ideas-page-title">Bright Ideas</h1>
  <div class="search-form">
    <input class="search" type="text" name="search" placeholder="Search...">
  </div>
  <div class="all-ideas">
    <% @ideas.each do |idea| %>
    <div class="any-idea">
      <div class="created-idea" data-idea-id = "<%= idea.id %>" id="idea">
        <strong>Title: </strong>
        <ul id="idea-title-show" data-title-id = "<%= idea.id %>" contentEditable="true"><%=idea.title  %></ul>
        <strong>Body: </strong><ul id="idea-body-show" data-body-id = "<%=idea.id %>" contentEditable="true"><%=idea.truncate_body  %></ul><br><strong>Quality: </strong>
        <ul id="idea-quality-show" data-body-id = "<%=idea.id %>"> <%=idea.quality %></ul>
        <ul><button id="plus-quality" type="button"> Up </button>
        <button id="minus-quality" type="button"> Down </button></ul>
        <ul><div class="remove-button">
            <input type="submit" value="Delete">
          </div></ul>
      </div>
    </div>
    <% end %>
  </div>

</div>
</div>
